---
import { getLangFromUrl, useTranslations } from '../i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<section id="contact" class="min-h-screen py-20 px-4 sm:px-6 lg:px-8">
  <div class="max-w-4xl mx-auto">
    <!-- Header -->
    <div class="text-center mb-16">
      <h2 class="text-4xl md:text-5xl font-bold text-white mb-4">
        {t('contact.title')}
      </h2>
      <div class="w-20 h-1 bg-blue-600 mx-auto mb-6"></div>
      <p class="text-gray-300 text-lg max-w-2xl mx-auto">
        {t('contact.subtitle')}
      </p>
    </div>

    <!-- Form Container -->
    <div class="bg-gray-800/50 backdrop-blur-sm rounded-2xl p-8 shadow-2xl border border-gray-700">
      <form id="contact-form" class="space-y-6">
        <!-- Nombre -->
        <div>
          <label for="nombre" class="block text-sm font-semibold text-gray-200 mb-2">
            {t('contact.form.name')} <span class="text-red-500">*</span>
          </label>
          <input
            type="text"
            id="nombre"
            name="nombre"
            required
            class="w-full px-4 py-3 bg-gray-900/50 border border-gray-600 rounded-lg text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all"
            placeholder={t('contact.form.namePlaceholder')}
          />
        </div>

        <!-- Email y TelÃ©fono -->
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <div>
            <label for="email" class="block text-sm font-semibold text-gray-200 mb-2">
              {t('contact.form.email')} <span class="text-red-500">*</span>
            </label>
            <input
              type="email"
              id="email"
              name="email"
              required
              class="w-full px-4 py-3 bg-gray-900/50 border border-gray-600 rounded-lg text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all"
              placeholder={t('contact.form.emailPlaceholder')}
            />
          </div>

          <div>
            <label for="telefono" class="block text-sm font-semibold text-gray-200 mb-2">
              {t('contact.form.phone')}
            </label>
            <input
              type="tel"
              id="telefono"
              name="telefono"
              class="w-full px-4 py-3 bg-gray-900/50 border border-gray-600 rounded-lg text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all"
              placeholder={t('contact.form.phonePlaceholder')}
            />
          </div>
        </div>

        <!-- PaÃ­s y Presupuesto -->
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <div>
            <label for="pais" class="block text-sm font-semibold text-gray-200 mb-2">
              {t('contact.form.country')}
            </label>
            <input
              type="text"
              id="pais"
              name="pais"
              class="w-full px-4 py-3 bg-gray-900/50 border border-gray-600 rounded-lg text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all"
              placeholder={t('contact.form.countryPlaceholder')}
            />
          </div>

          <div>
            <label for="presupuesto" class="block text-sm font-semibold text-gray-200 mb-2">
              {t('contact.form.budget')}
            </label>
            <select
              id="presupuesto"
              name="presupuesto"
              class="w-full px-4 py-3 pr-10 bg-gray-900/50 border border-gray-600 rounded-lg text-white focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all appearance-none bg-[url('data:image/svg+xml;charset=utf-8,%3Csvg%20xmlns%3D%22http%3A%2F%2Fwww.w3.org%2F2000%2Fsvg%22%20fill%3D%22none%22%20viewBox%3D%220%200%2020%2020%22%3E%3Cpath%20stroke%3D%22%236b7280%22%20stroke-linecap%3D%22round%22%20stroke-linejoin%3D%22round%22%20stroke-width%3D%221.5%22%20d%3D%22M6%208l4%204%204-4%22%2F%3E%3C%2Fsvg%3E')] bg-[length:1.5em_1.5em] bg-[right_0.5rem_center] bg-no-repeat"
            >
              <option value="">{t('contact.form.budgetPlaceholder')}</option>
              <option value=">$500">&lt$500 USD </option>
              <option value="$500 - $1,000">$500 - $1,000 USD</option>
              <option value="$1,000 - $3,000">$1,000 - $3,000 USD</option>
              <option value="$3,000 - $5,000">$3,000 - $5,000 USD</option>
              <option value="$5,000 - $10,000">$5,000 - $10,000 USD</option>
              <option value="> $10,000">&gt$10,000 USD</option>
            </select>
          </div>
        </div>

        <!-- Mensaje -->
        <div>
          <label for="mensaje" class="block text-sm font-semibold text-gray-200 mb-2">
            {t('contact.form.message')} <span class="text-red-500">*</span>
          </label>
          <textarea
            id="mensaje"
            name="mensaje"
            required
            rows="5"
            class="w-full px-4 py-3 bg-gray-900/50 border border-gray-600 rounded-lg text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all resize-none"
            placeholder={t('contact.form.messagePlaceholder')}
          ></textarea>
        </div>

        <!-- Test Button (temporal) -->
        <div class="mb-4">
          <button
            type="button"
            id="fill-test-data"
            class="w-full px-4 py-2 bg-yellow-600 text-white font-semibold rounded-lg hover:bg-yellow-700 transition-all"
          >
            ðŸ§ª Llenar datos de prueba
          </button>
        </div>

        <!-- Submit Button -->
        <div>
          <button
            type="submit"
            id="submit-btn"
            class="w-full px-8 py-4 bg-gradient-to-r from-blue-600 to-blue-700 text-white font-bold rounded-lg hover:from-blue-700 hover:to-blue-800 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 focus:ring-offset-gray-800 transform hover:scale-[1.02] transition-all duration-200 shadow-lg hover:shadow-blue-500/50"
          >
            <span id="btn-text">{t('contact.form.submit')}</span>
            <span id="btn-loading" class="hidden">
              <svg class="animate-spin inline-block w-5 h-5 mr-2" fill="none" viewBox="0 0 24 24">
                <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
              </svg>
              {t('contact.form.sending')}
            </span>
          </button>
        </div>

        <!-- Status Messages -->
        <div id="form-status" class="hidden">
          <div id="success-message" class="hidden p-4 bg-green-500/20 border border-green-500 rounded-lg text-green-400 text-center">
            <svg class="w-6 h-6 inline-block mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
            </svg>
            {t('contact.form.success')}
          </div>
          <div id="error-message" class="hidden p-4 bg-red-500/20 border border-red-500 rounded-lg text-red-400 text-center">
            <svg class="w-6 h-6 inline-block mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
            </svg>
            {t('contact.form.error')}
          </div>
        </div>
      </form>
    </div>

    <!-- Info Cards -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mt-12">
      <div class="text-center p-6 bg-gray-800/30 rounded-lg border border-gray-700">
        <svg class="w-8 h-8 mx-auto mb-3 text-blue-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
        </svg>
        <h3 class="text-white font-semibold mb-1">{t('contact.info.email')}</h3>
        <p class="text-gray-400 text-sm">contact@example.com</p>
      </div>

      <div class="text-center p-6 bg-gray-800/30 rounded-lg border border-gray-700">
        <svg class="w-8 h-8 mx-auto mb-3 text-blue-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
        </svg>
        <h3 class="text-white font-semibold mb-1">{t('contact.info.response')}</h3>
        <p class="text-gray-400 text-sm">{t('contact.info.responseTime')}</p>
      </div>

      <div class="text-center p-6 bg-gray-800/30 rounded-lg border border-gray-700">
        <svg class="w-8 h-8 mx-auto mb-3 text-blue-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
        </svg>
        <h3 class="text-white font-semibold mb-1">{t('contact.info.location')}</h3>
        <p class="text-gray-400 text-sm">{t('contact.info.remote')}</p>
      </div>
    </div>
  </div>
</section>

<script>
  import { sendToGoogleSheets } from '../scripts/googleSheets';

  // Seleccionar elementos del DOM
  const form = document.getElementById('contact-form') as HTMLFormElement;
  const submitBtn = document.getElementById('submit-btn') as HTMLButtonElement;
  const btnText = document.getElementById('btn-text') as HTMLSpanElement;
  const btnLoading = document.getElementById('btn-loading') as HTMLSpanElement;
  const formStatus = document.getElementById('form-status') as HTMLDivElement;
  const successMessage = document.getElementById('success-message') as HTMLDivElement;
  const errorMessage = document.getElementById('error-message') as HTMLDivElement;
  const fillTestBtn = document.getElementById('fill-test-data') as HTMLButtonElement;

  // Llenar datos de prueba
  if (fillTestBtn) {
    fillTestBtn.addEventListener('click', () => {
      const nombreInput = document.getElementById('nombre') as HTMLInputElement;
      const emailInput = document.getElementById('email') as HTMLInputElement;
      const telefonoInput = document.getElementById('telefono') as HTMLInputElement;
      const paisInput = document.getElementById('pais') as HTMLInputElement;
      const presupuestoInput = document.getElementById('presupuesto') as HTMLSelectElement;
      const mensajeInput = document.getElementById('mensaje') as HTMLTextAreaElement;

      if (nombreInput) nombreInput.value = 'Juan PÃ©rez';
      if (emailInput) emailInput.value = 'juan.perez@example.com';
      if (telefonoInput) telefonoInput.value = '+52 55 1234 5678';
      if (paisInput) paisInput.value = 'MÃ©xico';
      if (presupuestoInput) presupuestoInput.value = '$1,000 - $3,000';
      if (mensajeInput) mensajeInput.value = 'Hola, necesito desarrollar una aplicaciÃ³n web para mi negocio. Tengo una idea clara de lo que necesito y me gustarÃ­a saber si pueden ayudarme con el desarrollo.';
    });
  }

  // Manejar el envÃ­o del formulario
  if (form) {
    form.addEventListener('submit', async (e) => {
      e.preventDefault();

      // Obtener datos del formulario
      const formData = new FormData(form);

      // Mostrar estado de carga
      if (submitBtn) {
        submitBtn.disabled = true;
        if (btnText) btnText.classList.add('hidden');
        if (btnLoading) btnLoading.classList.remove('hidden');
      }

      try {
        // Enviar a Google Sheets
        const success = await sendToGoogleSheets(formData);

        if (success) {
          // Mostrar mensaje de Ã©xito
          if (formStatus) formStatus.classList.remove('hidden');
          if (successMessage) successMessage.classList.remove('hidden');
          if (errorMessage) errorMessage.classList.add('hidden');

          // Limpiar formulario
          form.reset();

          // Limpiar mensaje despuÃ©s de 5 segundos
          setTimeout(() => {
            if (formStatus) formStatus.classList.add('hidden');
          }, 5000);
        } else {
          // Mostrar mensaje de error
          if (formStatus) formStatus.classList.remove('hidden');
          if (errorMessage) errorMessage.classList.remove('hidden');
          if (successMessage) successMessage.classList.add('hidden');

          // Limpiar mensaje despuÃ©s de 5 segundos
          setTimeout(() => {
            if (formStatus) formStatus.classList.add('hidden');
          }, 5000);
        }

      } catch (error) {
        console.error('Error:', error);

        // Mostrar mensaje de error
        if (formStatus) formStatus.classList.remove('hidden');
        if (errorMessage) errorMessage.classList.remove('hidden');
        if (successMessage) successMessage.classList.add('hidden');

        // Limpiar mensaje despuÃ©s de 5 segundos
        setTimeout(() => {
          if (formStatus) formStatus.classList.add('hidden');
        }, 5000);

      } finally {
        // Rehabilitar el botÃ³n
        if (submitBtn) {
          submitBtn.disabled = false;
          if (btnText) btnText.classList.remove('hidden');
          if (btnLoading) btnLoading.classList.add('hidden');
        }
      }
    });
  }
</script>

<style>
  select option {
    background-color: #1f2937;
    color: white;
  }

  @media (prefers-reduced-motion: reduce) {
    button {
      transform: none !important;
    }
  }
</style>
