---
import { getLangFromUrl, useTranslations } from '../i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<section id="contact" class="min-h-screen py-20 px-4 sm:px-6 lg:px-8">
  <div class="max-w-4xl mx-auto">
    <!-- Header -->
    <div class="contact-header section-hidden text-center mb-16">
      <h2 class="text-4xl md:text-5xl font-bold text-white mb-4">
        {t('contact.title')}
      </h2>
      <div class="w-20 h-1 bg-blue-600 mx-auto mb-6"></div>
      <p class="text-gray-300 text-lg max-w-2xl mx-auto">
        {t('contact.subtitle')}
      </p>
    </div>

    <!-- Form Container -->
    <div class="contact-form section-hidden bg-gray-800/50 backdrop-blur-sm rounded-2xl p-8 shadow-2xl border border-gray-700">
      <form id="contact-form" class="space-y-6">
        <!-- Nombre -->
        <div>
          <label for="nombre" class="block text-sm font-semibold text-gray-200 mb-2">
            {t('contact.form.name')} <span class="text-red-500">*</span>
          </label>
          <input
            type="text"
            id="nombre"
            name="nombre"
            required
            class="w-full px-4 py-3 bg-gray-900/50 border border-gray-600 rounded-lg text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all"
            placeholder={t('contact.form.namePlaceholder')}
          />
        </div>

        <!-- Email y Teléfono -->
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <div>
            <label for="email" class="block text-sm font-semibold text-gray-200 mb-2">
              {t('contact.form.email')} <span class="text-red-500">*</span>
            </label>
            <input
              type="email"
              id="email"
              name="email"
              required
              class="w-full px-4 py-3 bg-gray-900/50 border border-gray-600 rounded-lg text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all"
              placeholder={t('contact.form.emailPlaceholder')}
            />
          </div>

          <div>
            <label for="telefono" class="block text-sm font-semibold text-gray-200 mb-2">
              {t('contact.form.phone')}
            </label>
            <input
              type="tel"
              id="telefono"
              name="telefono"
              class="w-full px-4 py-3 bg-gray-900/50 border border-gray-600 rounded-lg text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all"
              placeholder={t('contact.form.phonePlaceholder')}
            />
          </div>
        </div>

        <!-- País y Presupuesto -->
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <div>
            <label for="pais" class="block text-sm font-semibold text-gray-200 mb-2">
              {t('contact.form.country')}
            </label>
            <input
              type="text"
              id="pais"
              name="pais"
              class="w-full px-4 py-3 bg-gray-900/50 border border-gray-600 rounded-lg text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all"
              placeholder={t('contact.form.countryPlaceholder')}
            />
          </div>

          <div>
            <label for="presupuesto" class="block text-sm font-semibold text-gray-200 mb-2">
              {t('contact.form.budget')}
            </label>
            <select
              id="presupuesto"
              name="presupuesto"
              class="w-full px-4 py-3 pr-10 bg-gray-900/50 border border-gray-600 rounded-lg text-white focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all appearance-none bg-[url('data:image/svg+xml;charset=utf-8,%3Csvg%20xmlns%3D%22http%3A%2F%2Fwww.w3.org%2F2000%2Fsvg%22%20fill%3D%22none%22%20viewBox%3D%220%200%2020%2020%22%3E%3Cpath%20stroke%3D%22%236b7280%22%20stroke-linecap%3D%22round%22%20stroke-linejoin%3D%22round%22%20stroke-width%3D%221.5%22%20d%3D%22M6%208l4%204%204-4%22%2F%3E%3C%2Fsvg%3E')] bg-[length:1.5em_1.5em] bg-[right_0.5rem_center] bg-no-repeat"
            >
              <option value="">{t('contact.form.budgetPlaceholder')}</option>
              <option value=">$500">&lt$500 USD </option>
              <option value="$500 - $1,000">$500 - $1,000 USD</option>
              <option value="$1,000 - $3,000">$1,000 - $3,000 USD</option>
              <option value="$3,000 - $5,000">$3,000 - $5,000 USD</option>
              <option value="$5,000 - $10,000">$5,000 - $10,000 USD</option>
              <option value="> $10,000">&gt$10,000 USD</option>
            </select>
          </div>
        </div>

        <!-- Mensaje -->
        <div>
          <label for="mensaje" class="block text-sm font-semibold text-gray-200 mb-2">
            {t('contact.form.message')} <span class="text-red-500">*</span>
          </label>
          <textarea
            id="mensaje"
            name="mensaje"
            required
            rows="5"
            class="w-full px-4 py-3 bg-gray-900/50 border border-gray-600 rounded-lg text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all resize-none"
            placeholder={t('contact.form.messagePlaceholder')}
          ></textarea>
        </div>

        <!-- Submit Button -->
        <div class="flex justify-center">
          <button
            type="submit"
            id="submit-btn"
            class="w-auto mx-auto px-8 py-4 bg-blue-600 text-white font-bold rounded-lg hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 focus:ring-offset-gray-800 transition-colors duration-200"
          >
            <span id="btn-text">{t('contact.form.submit')}</span>
            <span id="btn-loading" class="hidden">
              <svg class="animate-spin inline-block w-5 h-5 mr-2" fill="none" viewBox="0 0 24 24">
                <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
              </svg>
              {t('contact.form.sending')}
            </span>
          </button>
        </div>

        <!-- Status Messages -->
        <div id="form-status" class="hidden">
          <div id="success-message" class="hidden p-4 bg-green-500/20 border border-green-500 rounded-lg text-green-400 text-center">
            <svg class="w-6 h-6 inline-block mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
            </svg>
            {t('contact.form.success')}
          </div>
          <div id="error-message" class="hidden p-4 bg-red-500/20 border border-red-500 rounded-lg text-red-400 text-center">
            <svg class="w-6 h-6 inline-block mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
            </svg>
            {t('contact.form.error')}
          </div>
        </div>
      </form>
    </div>

    <!-- Info Cards -->
    <div class="contact-cards grid grid-cols-1 md:grid-cols-3 gap-6 mt-12">
      <div class="contact-card section-hidden text-center p-6 bg-gray-800/30 rounded-lg border border-gray-700">
        <svg class="w-8 h-8 mx-auto mb-3 text-blue-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
        </svg>
        <h3 class="text-white font-semibold mb-1">{t('contact.info.email')}</h3>
        <a href="mailto:jesus_diaz_parra7@hotmail.com" class="text-gray-400 text-sm hover:text-blue-500 transition-colors">jesus_diaz_parra7@hotmail.com</a>
      </div>

      <div class="contact-card section-hidden text-center p-6 bg-gray-800/30 rounded-lg border border-gray-700">
        <svg class="w-8 h-8 mx-auto mb-3 text-green-500" fill="currentColor" viewBox="0 0 24 24">
          <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
        </svg>
        <h3 class="text-white font-semibold mb-1">WhatsApp</h3>
        <a href="https://wa.me/584121040181" target="_blank" class="text-gray-400 text-sm hover:text-green-500 transition-colors">+58 412 104 0181</a>
      </div>

      <div class="contact-card section-hidden text-center p-6 bg-gray-800/30 rounded-lg border border-gray-700">
        <svg class="w-8 h-8 mx-auto mb-3 text-blue-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
        </svg>
        <h3 class="text-white font-semibold mb-1">{t('contact.info.response')}</h3>
        <p class="text-gray-400 text-sm">{t('contact.info.responseTime')}</p>
      </div>
    </div>
  </div>
</section>

<script>
  import { sendToGoogleSheets } from '../scripts/googleSheets';
  import { sendWhatsAppNotification } from '../scripts/whatsapp';

  // Seleccionar elementos del DOM
  const form = document.getElementById('contact-form') as HTMLFormElement;
  const submitBtn = document.getElementById('submit-btn') as HTMLButtonElement;
  const btnText = document.getElementById('btn-text') as HTMLSpanElement;
  const btnLoading = document.getElementById('btn-loading') as HTMLSpanElement;
  const formStatus = document.getElementById('form-status') as HTMLDivElement;
  const successMessage = document.getElementById('success-message') as HTMLDivElement;
  const errorMessage = document.getElementById('error-message') as HTMLDivElement;


  // Manejar el envío del formulario
  if (form) {
    form.addEventListener('submit', async (e) => {
      e.preventDefault();

      // Obtener datos del formulario
      const formData = new FormData(form);

      // Mostrar estado de carga
      if (submitBtn) {
        submitBtn.disabled = true;
        if (btnText) btnText.classList.add('hidden');
        if (btnLoading) btnLoading.classList.remove('hidden');
      }

      try {
        // Enviar a Google Sheets
        const success = await sendToGoogleSheets(formData);

        // Enviar notificación de WhatsApp
        await sendWhatsAppNotification({
          nombre: formData.get('nombre') as string,
          email: formData.get('email') as string,
          telefono: formData.get('telefono') as string || undefined,
          pais: formData.get('pais') as string || undefined,
          presupuesto: formData.get('presupuesto') as string || undefined,
          mensaje: formData.get('mensaje') as string
        });

        if (success) {
          // Mostrar mensaje de éxito
          if (formStatus) formStatus.classList.remove('hidden');
          if (successMessage) successMessage.classList.remove('hidden');
          if (errorMessage) errorMessage.classList.add('hidden');

          // Limpiar formulario
          form.reset();

          // Limpiar mensaje después de 5 segundos
          setTimeout(() => {
            if (formStatus) formStatus.classList.add('hidden');
          }, 5000);
        } else {
          // Mostrar mensaje de error
          if (formStatus) formStatus.classList.remove('hidden');
          if (errorMessage) errorMessage.classList.remove('hidden');
          if (successMessage) successMessage.classList.add('hidden');

          // Limpiar mensaje después de 5 segundos
          setTimeout(() => {
            if (formStatus) formStatus.classList.add('hidden');
          }, 5000);
        }

      } catch (error) {
        console.error('Error:', error);

        // Mostrar mensaje de error
        if (formStatus) formStatus.classList.remove('hidden');
        if (errorMessage) errorMessage.classList.remove('hidden');
        if (successMessage) successMessage.classList.add('hidden');

        // Limpiar mensaje después de 5 segundos
        setTimeout(() => {
          if (formStatus) formStatus.classList.add('hidden');
        }, 5000);

      } finally {
        // Rehabilitar el botón
        if (submitBtn) {
          submitBtn.disabled = false;
          if (btnText) btnText.classList.remove('hidden');
          if (btnLoading) btnLoading.classList.add('hidden');
        }
      }
    });
  }
</script>

<style>
  select option {
    background-color: #1f2937;
    color: white;
  }

  @media (prefers-reduced-motion: reduce) {
    button {
      transform: none !important;
    }
  }
</style>
